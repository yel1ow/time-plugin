<idea-plugin>

  <id>org.example.TimePlugin</id>

  <name>TimePlugin</name>

  <depends>com.intellij.modules.platform</depends>

  <description>
    <![CDATA[
      This plugin show current time in a tool window.
    ]]>
  </description>

  <vendor url="https://plugins.jetbrains.com">IntelliJ Platform SDK</vendor>

  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="Current time" secondary="true" icon="/toolWindow/plus.png" anchor="right"
                factoryClass="org.example.time_plugin.MyToolWindowFactory"/>
  </extensions>

</idea-plugin>
